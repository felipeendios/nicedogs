<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/dimen_8dp"
    tools:layout_width="@dimen/dimen_96dp">

    <ImageView
        android:id="@+id/imageview_breed_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_96dp"
        android:contentDescription="@string/breed_image"
        app:layout_constraintBottom_toTopOf="@id/textview_breed_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/baseline_warning_24" />

    <TextView
        android:id="@+id/textview_breed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/dimen_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_breed_picture"
        tools:text="Beagle" />

</androidx.constraintlayout.widget.ConstraintLayout>